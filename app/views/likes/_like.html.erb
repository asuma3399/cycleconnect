<%= turbo_frame_tag dom_id(post, :like) do %>
  <% if user_signed_in? && post.liked_by?(current_user)%>
    <%= link_to post_likes_path(post), data: { turbo_method: :delete }, class: "post_likes" do %>
      <i class="fas fa-heart"></i> <span><%= post.likes.count %></span>
    <% end %>
  <% else %>
    <%= link_to post_likes_path(post), data: { turbo_method: :post }, class: "post_likes" do %>
      <i class="far fa-heart"></i> <span><%= post.likes.count %></span>
    <% end %>
  <% end %>
<% end %>