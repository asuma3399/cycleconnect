<!DOCTYPE html>
<html>
<head>
  <title>CycleConnect</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag 'devise', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<body>
    <header class="main-header">
      <div class="header-container">
        <%= link_to "CycleConnect", root_path, class: "logo" %>
        <nav class="main-nav">
          <%= link_to "Home", root_path, class: "nav-link" %>
          <%= link_to "Gallery", '#', class: "nav-link" %>
          <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
        </nav>
      </div>
    </header>

    <%= yield %>
    <footer class="footer">
      <div class="container">
        <p>&copy; 2024 CycleConnect. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
