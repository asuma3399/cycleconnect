<!DOCTYPE html>
<html>
<head>
  <title>CycleConnect</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag 'devise', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_importmap_tags %>
</head>
<body>
    <header class="main-header">
      <div class="header-container">
        <%= link_to "CycleConnect", root_path, class: "logo" %>
        <% if user_signed_in? %>
          <nav class="main-nav">
            <%= link_to "Gallery", posts_path, class: "nav-link" %>
            <%= link_to "Chat", chat_rooms_path, class: "nav-link" %>
            <%= link_to "Profile", profile_path(current_user), class: "nav-link" %>
            <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
          </nav>
        <% end %>
      </div>
    </header>

    <%= yield %>

  </body>
</html>
