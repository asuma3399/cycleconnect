<header class="main-header">
  <div class="header-container">
    <%= link_to image_tag('logo.png', alt: 'CycleConnect Logo', class: 'logo-image'), root_path %>
    <% if user_signed_in? %>
      <nav class="main-nav">
        <%= link_to "Gallery", posts_path, class: "nav-link" %>
        <%= link_to "Chat", chat_rooms_path, class: "nav-link" %>
        <%= link_to "Profile", profile_path(current_user), class: "nav-link" %>
        <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
      </nav>
    <% end %>
  </div>
</header>